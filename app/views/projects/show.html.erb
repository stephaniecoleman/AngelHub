<div class="row row-fluid homepage">
  <!-- Left Side Container -->
  <div class="col-xs-12">
  <!-- Requested Projects Container -->
    <div class="row row-fluid">
      <div class="col-xs-2"></div>
        <div class="col-xs-8">
          <div class="row row-fluid">
            <div class="col-xs-6">
              <section class="project-title">
                <h1 class="title"><%=@project.title %></h1>
                <h4>Date added: <%= @project.created_at.to_formatted_s(:long_ordinal)%></h4>
              </section>
              <h4 class="subtitle"><%= @project.description %></h4>
            </div>
            <div class="col-xs-6">
              <img src="<%= @project.project_pic.gallery %>"/>
              <%= status_button(current_user, @project)%>
              <%= button_to "Delete",  project_path(@project), :class => "btn btn-lg btn-dark btn-default", method: :delete %>   
            </div> 
          </div>
          <hr class="bs-docs-separator">
          <div class="row row-fluid">
            <div class="col-xs-8">
              <section class="project-about">
                <h2>About Us </h2>
                <h3><strong><%= @project.organization.name %></strong></h3>
                <ul>
                  <li> <%= link_to @project.organization.url %></li>
                  <li><%= @project.organization.email %></li>
                  <li><%= @project.organization.description %></li>
                </ul>
              </section>
            </div>
          </div>
          <% if !@project.developers.empty?  %>
          <hr class="bs-docs-separator">
          <div class="row row-fluid">
            <div class="col-xs-8">
              <section class="project-developers">
                <h2>Developers on the Project</h2>
              </section>
              <% @project.developers.each do |collab| %>
              <div class="col-xs-3">
                <img src="<%= collab.image %>"/>
              </div>
              <% end%>
            </div>
          </div>
          <% end%>
        </div>
        <div class="col-xs-2"></div>
      </div><!-- col -->
    </div><!-- row -->